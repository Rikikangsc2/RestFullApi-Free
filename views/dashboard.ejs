    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #18bc9c;
            --bg-color: #f5f5f5;
            --text-color: #333;
            --link-color: #18bc9c;
            --link-hover-color: #16a085;
            --content-color: #666;
            --footer-bg-color: #2c3e50;
            --footer-text-color: #f5f5f5;
            --banner-bg: url('https://anime-reactions.uzairashraf.dev/sad/aqua-sad.jpg') no-repeat center center/cover; 
            --card-bg-color: #ffffff;
            --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        body.dark-mode {
            --bg-color: #333;
            --text-color: #f5f5f5;
            --card-bg-color: #444;
            --content-color: #ddd;
            --footer-bg-color: #222;
            --footer-text-color: #f5f5f5;
