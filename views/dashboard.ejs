        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Helvetica Neue', Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Banner Section */
        .banner {
            background: var(--banner-bg);
            color: #fff;
            padding: 120px 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: background-image 0.5s ease-in-out; /* Added transition for smooth image change */
        }

        .banner h1 {
            font-size: 3rem;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .banner p {
            font-size: 1.2rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

        .banner-controls {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
        }

        .banner-controls i {
            cursor: pointer;
            font-size: 1.8rem;
            color: #fff;
            padding: 10px 20px;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .banner-controls i:hover {
            background-color: rgba(0, 0, 0, 0.5);
        }

        /* Menu Card */
        .menu-card {
            background-color: var(--card-bg-color);
            border-radius: 8px;
            box-shadow: var(--card-shadow);
            margin: -40px auto 20px auto;
            max-width: 80%;
            padding: 15px;
            position: relative;
            z-index: 1;
        }

        .menu-card .menu-item {
            display: block; /* Changed to block for better button layout */
            margin: 8px 0;
            text-align: center; /* Center buttons */
        }

        .menu-card .menu-item a {
            color: #fff; /* White text color for buttons */
            font-size: 1.1rem;
            padding: 10px 15px; /* Adjusted padding */
            text-decoration: none;
            background-color: var(--link-color); /* Background color for buttons */
            border-radius: 5px;
            transition: background-color 0.3s;
            display: inline-block; /* Display as inline-block for better spacing */
        }

        .menu-card .menu-item a i {
            margin-right: 8px;
        }

        .menu-card .menu-item a:hover {
            background-color: var(--link-hover-color);
        }

        /* Theme Toggle */
        .toggle-theme {
            cursor: pointer;
            color: var(--link-color);
            font-size: 1.4rem;
            text-align: center;
            padding: 8px;
            transition: color 0.3s;
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 10;
        }

        .toggle-theme:hover {
            color: var(--link-hover-color);
        }

        /* Content Sections */
        .content, .blog, .json-display {
            padding: 30px 20px;
            text-align: center;
        }

        .content h2, .blog h2, .json-display h2 {
            font-size: 1.8rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .content p, .blog p, .json-display p {
            color: var(--content-color);
            font-size: 1rem;
            margin-bottom: 15px;
        }

        /* Cards */
        .card {
            box-shadow: var(--card-shadow);
            border-radius: 8px;
            border: none;
            margin-bottom: 15px;
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            font-size: 1.3em;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .card-body {
            background: var(--card-bg-color);
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            padding: 15px;
        }

        /* Table Styling */
        .table {
            margin-bottom: 0;
        }

        .table thead th {
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table td, .table th {
            padding: 0.8em;
        }

        /* Footer */
        footer {
            background-color: var(--footer-bg-color);
            color: var(--footer-text-color);
            padding: 15px 0;
            text-align: center;
        }

        .footer-links a {
            color: var(--footer-text-color);
            margin: 0 8px;
        }

        .footer-links a:hover {
            color: var(--link-hover-color);
        }
    </style>
</head>
